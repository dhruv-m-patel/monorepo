{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["build/**", "dist/**"]
    },
    "bundle:api": {
      "outputs": ["build/api/**"]
    },
    "typecheck": {
      "dependsOn": ["^build"]
    },
    "lint": {},
    "test": {
      "dependsOn": ["^build"]
    },
    "test:ci": {
      "dependsOn": ["^build"]
    },
    "test:perf": {
      "dependsOn": ["bundle:api"]
    },
    "test:size": {
      "dependsOn": ["build"]
    }
  }
}
