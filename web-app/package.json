{
  "name": "web-app",
  "version": "1.0.8",
  "description": "A web app built with TypeScript, React 19, Vite, and React Router v7",
  "type": "module",
  "private": true,
  "license": "MIT",
  "scripts": {
    "dev": "tsx src/server.ts",
    "build": "tsc --noEmit && yarn build:client && yarn build:server",
    "build:client": "vite build",
    "build:server": "vite build --ssr src/entry-server.tsx --outDir dist/server",
    "clean": "rimraf dist",
    "start": "NODE_ENV=production tsx src/server.ts",
    "test": "vitest run",
    "test:ci": "vitest run --coverage --reporter=default --reporter=verbose",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "test:size": "size-limit",
    "test:size:report": "size-limit --json > size-report.json"
  },
  "size-limit": [
    {
      "name": "JS Bundle (gzip)",
      "path": "dist/client/assets/*.js",
      "gzip": true,
      "limit": "160 kB"
    },
    {
      "name": "JS Bundle (brotli)",
      "path": "dist/client/assets/*.js",
      "brotli": true,
      "limit": "130 kB"
    },
    {
      "name": "CSS (gzip)",
      "path": "dist/client/assets/*.css",
      "gzip": true,
      "limit": "6 kB"
    },
    {
      "name": "Total Bundle (gzip)",
      "path": [
        "dist/client/assets/*.js",
        "dist/client/assets/*.css"
      ],
      "gzip": true,
      "limit": "170 kB"
    }
  ],
  "dependencies": {
    "@dhruv-m-patel/express-app": "workspace:*",
    "@dhruv-m-patel/react-components": "workspace:*",
    "@tailwindcss/vite": "^4.1.18",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "express": "^4.21.2",
    "lucide-react": "^0.564.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router-dom": "^7.1.0",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.18"
  },
  "devDependencies": {
    "@size-limit/file": "^12.0.0",
    "@storybook/addon-essentials": "^8",
    "@storybook/addon-interactions": "^8",
    "@storybook/addon-links": "^8",
    "@storybook/blocks": "^8",
    "@storybook/react": "^8",
    "@storybook/react-vite": "^8",
    "@storybook/test": "^8",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.6.0",
    "@types/express": "^4.17.21",
    "@types/node": "^22.13.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^4.3.4",
    "jsdom": "^25.0.1",
    "rimraf": "^5.0.10",
    "size-limit": "^12.0.0",
    "storybook": "^8",
    "tsx": "^4.19.0",
    "typescript": "^5.7.3",
    "vite": "^6.0.0",
    "vitest": "^3.0.0"
  }
}
