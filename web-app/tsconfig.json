{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["ES2022", "DOM"],
    "jsx": "react",
    "outDir": "./build",
    "rootDir": "./src",
    "noImplicitAny": false,
    "typeRoots": ["../node_modules/@types", "./typings"]
  },
  "include": ["./src"],
  "exclude": [
    "node_modules",
    "build",
    "build-static",
    "./src/setupTests.ts",
    "test.ts",
    "test.tsx",
    "./src/**/*.test.tsx"
  ]
}
