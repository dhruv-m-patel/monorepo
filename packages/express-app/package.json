{
  "name": "@dhruv-m-patel/express-app",
  "version": "2.0.0",
  "description": "A package to spin up a REST API server with Express, including health checks, request tracing, and error handling",
  "main": "build/cjs/index.js",
  "module": "build/esm/index.js",
  "types": "build/cjs/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./build/esm/index.d.ts",
        "default": "./build/esm/index.js"
      },
      "require": {
        "types": "./build/cjs/index.d.ts",
        "default": "./build/cjs/index.js"
      }
    }
  },
  "files": [
    "build"
  ],
  "engines": {
    "node": ">= 22"
  },
  "scripts": {
    "build": "rimraf ./build && yarn build:cjs && yarn build:esm",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:esm": "tsc -p tsconfig.esm.json",
    "test": "jest --runInBand",
    "test:ci": "jest --silent --ci --coverage --coverageReporters=text --coverageReporters=text-summary",
    "test:watch": "jest --watch",
    "typecheck": "tsc --noEmit"
  },
  "author": {
    "name": "Dhruv Patel",
    "email": "dhruv.codelab@gmail.com"
  },
  "license": "MIT",
  "dependencies": {
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "express-openapi-validator": "^5.3.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^11.0.5",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.12.0",
    "@types/supertest": "^6.0.2",
    "@types/swagger-ui-express": "^4.1.7",
    "@types/uuid": "^10.0.0",
    "@types/yamljs": "^0.2.34",
    "express": "^4.21.2",
    "jest": "^29.7.0",
    "rimraf": "^5.0.10",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3"
  },
  "peerDependencies": {
    "express": ">= 4"
  },
  "publishConfig": {
    "access": "public"
  }
}
