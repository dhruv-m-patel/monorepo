{
  "name": "service",
  "version": "0.2.6",
  "main": "build/index.js",
  "private": true,
  "license": "MIT",
  "engines": {
    "node": ">= 22"
  },
  "scripts": {
    "bundle:api": "swagger-cli bundle -t yaml -o build/api/api-spec.yaml src/api/api-spec.yaml",
    "build": "rimraf ./build && tsc && yarn run bundle:api",
    "pretest": "yarn run bundle:api",
    "start": "node -r dotenv/config build/index.js",
    "dev": "tsx watch --clear-screen=false -r dotenv/config src/index.ts",
    "test": "vitest run",
    "test:ci": "vitest run --coverage --reporter=default --reporter=verbose",
    "test:perf": "vitest run --config vitest.perf.config.ts",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@dhruv-m-patel/express-app": "workspace:*"
  },
  "devDependencies": {
    "@apidevtools/swagger-cli": "^4.0.4",
    "@types/autocannon": "^7.12.7",
    "autocannon": "^8.0.0",
    "rimraf": "^5.0.10",
    "supertest": "^7.0.0",
    "tsx": "^4.19.0",
    "typescript": "^5.7.3",
    "vitest": "^3.0.0"
  }
}
